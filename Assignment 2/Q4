#include <iostream>
#include <algorithm>
using namespace std;

struct Job {
    char id;
    int deadline, profit;
};

bool compare(Job a, Job b) {
    return a.profit > b.profit;
}

int main() {
    Job jobs[] = {{'J',2,100},{'K',1,19},{'L',2,27},{'M',1,25},{'N',3,15}};
    int n = 5;

    sort(jobs, jobs+n, compare);

    bool slot[10] = {false};
    char result[10];
    int profit = 0;

    for(int i = 0; i < n; i++) {
        for(int j = jobs[i].deadline - 1; j >= 0; j--) {
            if(!slot[j]) {
                slot[j] = true;
                result[j] = jobs[i].id;
                profit += jobs[i].profit;
                break;
            }
        }
    }

    cout << "Selected Jobs: ";
    for(int i = 0; i < n; i++)
        if(slot[i]) cout << result[i] << " ";

    cout << "\nMaximum Profit = " << profit;
    return 0;
}
